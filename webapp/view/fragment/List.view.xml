<mvc:View
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">
        <m:Table
            id="productTable"
            items="{
                path: '/ZEWMIEFSI01STOCKSet',
                sorter: {
                    path: 'Lgtyp'
                }
            }">
            <m:headerToolbar>
                <m:Toolbar>
                    <m:SearchField width="25%" search=".onSearchProduct"/>   
                </m:Toolbar>
            </m:headerToolbar>
            <m:columns>
                <m:Column>
                    <m:Text text="Product" />
                </m:Column>
                <m:Column>
                    <m:Text text="Description" />
                </m:Column>
                <m:Column>
                    <m:Text text="Amount" />
                </m:Column>

            </m:columns>
            <m:items>
                <m:ColumnListItem vAlign="Middle" type="Navigation">
                    <m:cells>
                        <m:Text text="{Lgtyp}" wrapping="false" />
                        <m:Text text="{Lgnum}" wrapping="false"/>
                        <m:Text text="{TotalQuan} {Unit}" />
                    </m:cells>
                </m:ColumnListItem>
            </m:items>
        </m:Table>

