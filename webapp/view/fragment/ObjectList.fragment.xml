<core:FragmentDefinition
	xmlns="sap.m"
    controllerName="beerreplenishment.controller.ObjectView"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
    <Table
        id="productTable"
        items="{
            path: '/ZEWMIEFSI01STOCKSet',
            sorter: {
                path: 'TotalQuan',
                descending : 'true'
            }
        }">
        <!-- <headerToolbar>
            <Toolbar>
                <SearchField width="25%" search=".onSearchProduct"/>   
            </Toolbar>
        </headerToolbar> -->
        <columns>
            <Column width="35%">
                <Text text="Product" />
            </Column>
            <!-- <Column>
                <Text text="Description" />
            </Column> -->
            <!-- <Column>
                <Text text="Category" />
            </Column> -->
            <Column>
                <Text text="Available" />
            </Column>
            <Column width="30%">
                <Text text="Select Quantity" />
            </Column>
            <Column width="15%">
                <Text text="Rating" />
            </Column>

        </columns>
        <items>
            <ColumnListItem type="Navigation" vAlign="Middle" press=".onOpenDialog">
                <cells>
                    <ObjectIdentifier
                        title="{NameItem}"
                        text="{NameContainer}"/>
                    <!-- <Text text="{Lgnum}" wrapping="false"/> -->
                    <!-- <Text text="{Category}" wrapping="false"/> -->
                    <ObjectNumber
                        number="{
                            path: 'TotalQuan',
                            formatter: '.formatter.numberUnit'}"
                        unit="{Unit}"
                    />
                    <!-- <ObjectNumber
                        id="selectedValueTable"
                        number="{SelectedValue}"
                        unit="{Unit}"
                    /> -->
                    <StepInput
                        id="stepInputDialog"
                        value="0"
                        change="onChangeStepInput"
                        textAlign="Center"
                        min="0"
                        max="{path: 'TotalQuan', formatter: '.formatter.numberUnitInt'}"
                        required="true"
                        description="PC"
                        width="150px" />
                        <!-- <Text text="{Lgnum}" wrapping="false"/> -->
                    <RatingIndicator maxValue="5" value="{Rating}" tooltip="Rate '{NameItem}' now"/>
                    <!-- <ObjectNumber
                        id="selectedValueTable"
                        number="{selectedItem>/item/SelectedValue}"
                        unit="{Unit}"
                    /> -->
                    <!-- <Button
                        id="takeBeerButton"
                        text="Take a Beer"
                        press=".onOpenDialog"/> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>