<core:FragmentDefinition
	xmlns="sap.m"
    controllerName="beerreplenishment.controller.ObjectView"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
    <Table
        id="productTable"
        items="{
            path: '/ZEWMIEFSI01STOCKSet',
            sorter: {
                path: 'Quan',
                descending : 'true'
            }
        }">
        <!-- <headerToolbar>
            <Toolbar>
                <SearchField width="25%" search=".onSearchProduct"/>   
            </Toolbar>
        </headerToolbar> -->
        <columns>
            <Column width="5%">
            
            </Column>
            <Column width="30%">
                <Text text="Product" />
            </Column>
            <Column>
                <Text text="Available" />
            </Column>
            <Column>
                <Text text="Open Replenishment" />
            </Column>
            <Column width="30%">
                <Text text="Select Quantity" />
            </Column>
            <Column>
                <Text text="Last Refill" />
            </Column>

        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Image src="/img/drink/{Matid}.jpg" height="70px" class="" />
                    <ObjectIdentifier
                    title="{Description}"
                    text="{Lgtyp} ({Lgnum})"/>
                    <ObjectNumber
                        id="itemTotalQuan"
                        number="{Quan}"
                        unit="{Unit}"
                        state="{
                            path: 'Quan',
                            formatter: '.formatter.quantityState'}"
                    />
                    <ObjectNumber
                        id="itemOpenRepl"
                        number="{
                            path: 'Openreplenishment',
                            formatter: '.formatter.numberUnit'}"
                        unit="{Unit}"
                        state="Success"
                    />
                    <StepInput
                        id="stepInput"
                        value="{SelectedValue}"
                        change="onChangeStepInput"
                        textAlign="Center"
                        min="0"
                        max="{path: 'Quan', formatter: '.formatter.numberUnitInt'}"
                        required="true"
                        description="PC"
                        width="150px" />
                    <!-- <Text text="{path: 'Lastrefill', formatter: '.formatter.dateFormatter'}" /> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>