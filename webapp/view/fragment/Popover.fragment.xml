    <Dialog
        id="takeDialog"
        title="Name of Beer">
        <content>
            <VBox class="sapUiTinyMargin" justifyContent="SpaceBetween" alignItems="Center" alignContent="Center">
                <!-- <Panel class="sapUiResponsiveMargin" headerText="How much beer do you want to withdraw?">
