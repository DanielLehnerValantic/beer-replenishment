                <Title text="How much beer do you want to withdraw?" />
                <FlexBox direction="Column" alignItems="Center">
                    <StepInput value="1" change="onChangeStepInput" textAlign="Center" width="120px" />
                    <Text text="Available: 44" />
                </FlexBox>
            </VBox>
        </content>
        <beginButton>
            <Button
