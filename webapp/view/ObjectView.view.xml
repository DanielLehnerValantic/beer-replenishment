<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
    controllerName="beerreplenishment.controller.ObjectView"
    xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
    xmlns:items="beerreplenishment.sharedBlocks.items"
	height="100%">
    <ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
        isChildPage="true"
        showEditHeaderButton="true"
        showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{Lgtyp}" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
						</m:VBox>

						<m:VBox>
							<m:Title text="Object Page Header with Header Container" wrapping="true"/>
							<m:Label text="Example of an ObjectPage with header facet"/>
						</m:VBox>
                        
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="Example of an ObjectPage with header facet"/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="Object Page Header with Header Container"/>
				</snappedTitleOnMobile>

				<actions>
					<m:Button text="Edit" type="Emphasized"/>
					<m:Button text="Delete"/>
					<m:Button text="Copy"/>
					<m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<l:VerticalLayout class="sapUiSmallMarginEnd">
					<m:ObjectStatus title="User ID" text="12345678"/>
					<m:ObjectStatus title="Functional Area" text="Developement"/>
					<m:ObjectStatus title="Cost Center" text="PI DFA GD Programs and Product"/>
					<m:ObjectStatus title="Email" text="email@address.com"/>
				</l:VerticalLayout>

				<l:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Text width="200px" text="Hi, I'm Denise. I am passionate about what I do and I'll go the extra mile to make the customer win."/>
				</l:VerticalLayout>

				<l:HorizontalLayout class="sapUiSmallMarginBeginEnd">
					<m:ObjectStatus text="{Lgtyp}" state="Error" class="sapUiMediumMarginEnd"/>
					<m:ObjectStatus title="Label" text="In Stock" state="Warning"/>
				</l:HorizontalLayout>
			</m:FlexBox>
		</headerContent>

        <sections>
			<ObjectPageSection titleUppercase="false" title="Info">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<!-- <items:Info id="itemsInfo"/> -->
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="Drinks in fridge">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
                            <m:Table
                                id="productTable"
                                items="{
                                    path: '/ZEWMIEFSI01STOCKSet',
                                    sorter: {
                                        path: 'Lgtyp'
                                    }
                                }">
                                <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:SearchField width="25%" search=".onSearchProduct"/>   
                                    </m:Toolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Product" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Description" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Amount" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Test" />
                                    </m:Column>

                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem vAlign="Middle" type="Navigation" press=".openDialog">
                                        <m:cells>
                                            <m:Text text="{Lgtyp}" wrapping="false" />
                                            <m:Text text="{Lgnum}" wrapping="false"/>
                                            <m:Text text="{TotalQuan} {Unit}" />
                                            <m:Button
                                                text="Take"
                                                width="150px"
                                                press=".onApproveDialogPress" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>

							<!-- <smartList:SmartList id="ItemsST" entitySet="ZEWMIEFSI01STOCKSet" header="Drinks Overview"
                                showRowCount="true" showFullScreenButton="true" enableAutoBinding="true"
                                selectFields="Lgnum,Lgtyp,TotalQuan,Unit">
                                <smartList:listItemTemplate>
                                    <m:StandardListItem title="{Lgnum}" info="{TotalQuan} {Unit}"
                                        description="{Lgtyp}" press=".onPress" type="Navigation" />
                                </smartList:listItemTemplate>
                            </smartList:SmartList> -->



                            <!-- <m:VBox fitContainer="true">
                                <smartFilterBar:SmartFilterBar id="smartFilterBar"
                                    entitySet="ZEWMIEFSI01STOCKSet" persistencyKey="SmartFilter_Explored">
                                    <smartFilterBar:layoutData>
                                        <m:FlexItemData shrinkFactor="0" />
                                    </smartFilterBar:layoutData>
                                </smartFilterBar:SmartFilterBar>
                                <smartTable:SmartTable entitySet="ZEWMIEFSI01STOCKSet"
                                    smartFilterId="smartFilterBar" 
                                    useVariantManagement="false" useTablePersonalisation="true" header="Drinks Overview"
                                    showRowCount="true" persistencyKey="SmartTableRefApp_Explored"
                                    enableAutoBinding="true" class="sapUiResponsiveContentPadding"
                                     paste="onPaste"
                                    >
                                    <smartTable:layoutData>
                                        <m:FlexItemData growFactor="1" baseSize="0%" />
                                    </smartTable:layoutData>
                                </smartTable:SmartTable>
                            </m:VBox> -->
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
        <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save"/>
				<m:Button type="Reject" text="Cancel"/>
			</m:OverflowToolbar>
		</footer>

	</ObjectPageLayout>
</mvc:View>