<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
    controllerName="beerreplenishment.controller.ObjectView"
    xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds"
    xmlns:vizData="sap.viz.ui5.data"
    xmlns:fragment="beerreplenishment.view.fragment"
	height="100%">
    <ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
        isChildPage="true"
        showEditHeaderButton="true"
        showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Fridge: {view>/item/Lgtyp}" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
							<m:Title text="Fridge: {view>/item/Lgtyp}" wrapping="true"/>
							<m:Label text="Lorem ipsum description of fridge"/>
						</m:VBox>
                        
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="Lorem ipsum description of fridge. Lorem ipsum description of fridge. "/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="Object Page Header with Header Container"/>
				</snappedTitleOnMobile>

			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
                <m:Image src="/img/fridge/fridge_{view>/item/Lgtyp}.jpg" width="150px" class="sapUiSmallMarginEnd sapUiSmallMarginBottom" />
                <l:HorizontalLayout class="sapUiSmallMarginBeginEnd">
                    <l:VerticalLayout class="sapUiSmallMarginBeginEnd" width="150px">
                        <m:ObjectStatus title="Beer"/>
                        <m:ObjectStatus title="Tegernseer hell"/>
                        <m:ObjectStatus title="Augustiner"/>
                        <!-- <m:Text text="Fridge {view>/item/Lgtyp} in the kitchen." class="sapUiMediumMarginTop" /> -->
                        <m:Label text="Capacity {view>/item/Lgtyp}" class="sapUiMediumMarginTop"/>
                        
					    <!-- <m:ProgressIndicator displayValue="42%" percentValue="42%"  state="Information" width="125px" /> -->
                        <m:ProgressIndicator
                            displayValue="{path: 'view>/item/CapacityVal', formatter: '.formatter.numberUnitInt'}%"
                            percentValue="{path: 'view>/item/CapacityVal', formatter: '.formatter.numberUnitInt'}" 
                            state="Warning"
                            width="125px"
                        />
                        <m:Text
                            text="{
                                    path: 'view>/item/TotalQuan',
                                    formatter: '.formatter.numberUnitInt'
                                }
                                 of 
                                {
                                    path: 'view>/item/Capacity',
                                    formatter: '.formatter.numberUnitInt'
                                }"
                        />
                    </l:VerticalLayout>

                    <l:VerticalLayout>
                        <m:ObjectStatus text="In Stock:" state="Success"/>
                        <m:ObjectStatus text="In Stock:" state="Warning"/>
                        <m:ObjectStatus text="Out of stock:" state="Error"/>
                    </l:VerticalLayout>

                    <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <!-- <m:ObjectStatus text="{view>/item/Items/0/TotalQuan}" state="Success"/>
                        <m:ObjectStatus text="{view>/item/Items/1/TotalQuan}" state="Warning"/>
                        <m:ObjectStatus text="{view>/item/Items/2/TotalQuan}" state="Error"/> -->
                        <viz:VizFrame xmlns="sap.viz" id="idDonutChart" vizType="donut" width="100%" height="100%">
						<viz:dataset>
							<vizData:FlattenedDataset data="{ZEWMIEFSI01STOCKSet}">
								<vizData:dimensions>
									<vizData:DimensionDefinition name="Department" value="{NameItem}"/>
								</vizData:dimensions>
								<vizData:measures>
									<vizData:MeasureDefinition name="Employee Count" value="{TotalQuan}"/>
								</vizData:measures>
							</vizData:FlattenedDataset>
						</viz:dataset>
						<viz:feeds>
							<vizFeeds:FeedItem uid="size" type="Measure" values='Employee Count'/>
							<vizFeeds:FeedItem uid="color" type="Dimension" values="Department"/>
						</viz:feeds>
					</viz:VizFrame>
                    </l:VerticalLayout>
                </l:HorizontalLayout>
                
			</m:FlexBox>

            <!-- <m:FlexBox wrap="Wrap" fitContainer="true">

                <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Label text="Capacity"/>
					<m:ProgressIndicator displayValue="42%" percentValue="42%"  state="Information" width="125px" />
				</m:VBox>
			</m:FlexBox> -->
		</headerContent>

        <sections>
			<ObjectPageSection titleUppercase="false" title="Info">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<!-- <core:Fragment fragmentName="beerreplenishment.view.fragment.ObjectList" type="XML" 
							id="ObjectList"/> -->
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="Drinks in fridge ({view>/item/TotalQuan})">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
                            <core:Fragment fragmentName="beerreplenishment.view.fragment.ObjectList" type="XML"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
        <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save"/>
				<m:Button type="Reject" text="Cancel"/>
			</m:OverflowToolbar>
		</footer>

	</ObjectPageLayout>
</mvc:View>