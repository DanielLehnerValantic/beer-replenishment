<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
    controllerName="beerreplenishment.controller.ObjectView"
    xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
    xmlns:items="beerreplenishment.sharedBlocks.items"
    xmlns:fragment="beerreplenishment.view.fragment"
	height="100%">
    <ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
        isChildPage="true"
        showEditHeaderButton="true"
        showFooter="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Fridge: {view>/item/Lgtyp}" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
                            <!-- <m:Avatar class="sapUiSmallMarginEnd" displayShape="Square" initials="HF"/> -->
						</m:VBox>

						<m:VBox>
							<m:Title text="Fridge: {view>/item/Lgtyp}" wrapping="true"/>
							<m:Label text="Lorem ipsum description of fridge"/>
						</m:VBox>
                        
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="Lorem ipsum description of fridge"/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="Object Page Header with Header Container"/>
				</snappedTitleOnMobile>

				<!-- <actions>
					<m:Button text="Edit" type="Emphasized"/>
					<m:Button text="Delete"/>
					<m:Button text="Copy"/>
					<m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
				</actions> -->
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
                <!-- <m:Avatar class="sapUiMediumMarginEnd sapUiSmallMarginBottom" displayShape="Square" initials="HF" displaySize="L"/> -->
				<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Label text="Capacity"/>
					<m:ProgressIndicator displayValue="42%" percentValue="42%"  state="Information"/>
				</m:VBox>

				<l:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Text width="200px" text="Hi, I'm Denise. I am passionate about what I do and I'll go the extra mile to make the customer win."/>
				</l:VerticalLayout>

				<l:HorizontalLayout class="sapUiSmallMarginBeginEnd">
                    <m:ObjectStatus title="Tegernseer hell" text="In Stock {path:'view>/item/TotalQuan', formatter: '.formatter.numberUnit'}" state="Warning"/>
				</l:HorizontalLayout>
			</m:FlexBox>
		</headerContent>

        <sections>
			<ObjectPageSection titleUppercase="false" title="Info">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<!-- <items:Info id="itemsInfo"/> -->
                            <!-- <fragment:List id="itemsList"/> -->
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="Drinks in fridge">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
                            <m:Table
                                id="productTable"
                                items="{
                                    path: '/ZEWMIEFSI01STOCKSet',
                                    sorter: {
                                        path: 'Lgtyp'
                                    }
                                }">
                                <!-- <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:SearchField width="25%" search=".onSearchProduct"/>   
                                    </m:Toolbar>
                                </m:headerToolbar> -->
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Product" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Description" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Available Quantity" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Selected Quantity" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Select" />
                                    </m:Column>

                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem vAlign="Middle" press=".openDialog">
                                        <m:cells>
                                            <m:ObjectIdentifier
                                                title="{Lgtyp}"
                                                text="{Lgnum}"/>
                                            <m:Text text="{Lgnum}" wrapping="false"/>
                                            <m:ObjectNumber
                                                number="{
                                                    path: 'TotalQuan',
                                                    formatter: '.formatter.numberUnit'}"
                                                unit="{Unit}"
                                                />
                                            <m:Text text="0" wrapping="false"/>
                                            <m:Button
                                                id="takeBeerButton"
                                                text="Take a Beer"
                                                press=".onOpenDialog"/>
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
        <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save"/>
				<m:Button type="Reject" text="Cancel"/>
			</m:OverflowToolbar>
		</footer>

	</ObjectPageLayout>
</mvc:View>